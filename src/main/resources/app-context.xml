<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Wiring the dependencies for the Facility Management Application.</description>

	<context:component-scan base-package="edu.luc.comp473.facilityMan" />

    <!-- Building -->
    <bean id="building" class="edu.luc.comp473.facilityMan.business.entities.facility.Building" scope="prototype">
<!--        <property name="units">-->
<!--            <list>-->
<!--                <ref bean="unit"/>-->
<!--            </list>-->
<!--        </property>-->
        <property name="detail" ref="facilityDetail"/>
    </bean>

    <!-- Unit -->
    <bean id="unit" class="edu.luc.comp473.facilityMan.business.entities.facility.Unit" scope="prototype">
        <property name="detail" ref="facilityDetail"/>
    </bean>

    <!-- Facility Detail -->
    <bean id="facilityDetail" class="edu.luc.comp473.facilityMan.business.entities.facility.FacilityDetail" scope="prototype"/>

    <!-- Schedule -->
    <bean id="schedule" class="edu.luc.comp473.facilityMan.business.entities.util.Schedule" scope="prototype"/>

    <!-- Date -->
    <bean id="date" class="java.util.Date" scope="prototype"/>

    <!-- Facility Use -->
    <bean id="use" class="edu.luc.comp473.facilityMan.business.entities.use.FacilityUse" scope="prototype"/>

    <!-- Auto Incrementer -->
    <bean id="autoIncrementer" class="java.util.concurrent.atomic.AtomicLong"/>

    <!-- Facility Information Service -->
    <bean id="facilityDaoMap" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.lang.Long" value-type="edu.luc.comp473.facilityMan.business.entities.facility.Facility"/>
        </constructor-arg>
    </bean>
    <bean id="facilityDao" class="edu.luc.comp473.facilityMan.persistence.facility.HashMapFacilityDao">
        <constructor-arg ref="maintenanceDaoMap"/>
    </bean>
    <bean id="facilityInformationService" class="edu.luc.comp473.facilityMan.business.service.information.FacilityInformationServiceImpl">
        <constructor-arg ref="facilityDao"/>
    </bean>

    <!-- Facility Inspection Service -->
    <bean id="facilityInspectionDaoMap" class="edu.luc.comp473.facilityMan.persistence.inspection.HashMapFacilityInspectionDao">
        <constructor-arg>
            <map key-type="java.lang.Long" value-type="edu.luc.comp473.facilityMan.business.entities.inspection.FacilityInspection"/>
        </constructor-arg>
    </bean>
    <bean id="facilityInspectionDao" class="edu.luc.comp473.facilityMan.persistence.inspection.HashMapFacilityInspectionDao">
        <constructor-arg>
            <map key-type="java.lang.Long" value-type="edu.luc.comp473.facilityMan.persistence.inspection.HashMapFacilityInspectionDao"/>
        </constructor-arg>
    </bean>
    <bean id="facilityInspectionService" class="edu.luc.comp473.facilityMan.business.service.inspection.FacilityInspectionServiceImpl">
        <constructor-arg ref="facilityInspectionDao"/>
    </bean>
    <bean id="facilityInspection" class="edu.luc.comp473.facilityMan.business.entities.inspection.FacilityInspection" scope="prototype"/>

    <!-- Facility Inventory Service -->
    <bean id="facilityInventoryService" class="edu.luc.comp473.facilityMan.business.service.inventory.FacilityInventoryServiceImpl">
        <constructor-arg ref="facilityDao"/>
    </bean>

    <!-- Maintenance Service -->
    <bean id="maintenanceDaoMap" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.lang.Long" value-type="edu.luc.comp473.facilityMan.business.entities.maintenance.Maintenance"/>
        </constructor-arg>
    </bean>
    <bean id="maintenanceDao" class="edu.luc.comp473.facilityMan.persistence.maintenance.HashMapMaintenanceDao">
        <constructor-arg ref="maintenanceDaoMap"/>
    </bean>
    <bean id="maintenanceService" class="edu.luc.comp473.facilityMan.business.service.maintenance.MaintenanceServiceImpl">
        <constructor-arg ref="maintenanceDao"/>
    </bean>

    <!-- Maintenance Request Service -->
    <bean id="maintenanceRequestService" class="edu.luc.comp473.facilityMan.business.service.request.MaintenanceRequestServiceImpl">
        <constructor-arg ref="maintenanceDao"/>
        <property name="autoIncrementer" ref="autoIncrementer"/>
    </bean>

    <!-- Facility Use Service -->
    <bean id="facilityUseService" class="edu.luc.comp473.facilityMan.business.service.use.FacilityUseServiceImpl">
        <constructor-arg ref="useDao"/>
    </bean>
    <bean id="useDao" class="edu.luc.comp473.facilityMan.persistence.use.ArrayListUseDao">
        <constructor-arg>
            <list>
                <ref bean="facilityUse"/>
            </list>
        </constructor-arg>
    </bean>
    <bean id="facilityUse" class="edu.luc.comp473.facilityMan.business.entities.use.FacilityUse" scope="prototype"/>
</beans>
